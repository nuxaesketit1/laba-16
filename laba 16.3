#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n, min_i = 0, max_i = 0;
	double min, max;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n<0);

	double* array = new double[n+2];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++)
		cin >> array[i];

	min = array[0];
	max = array[0];

	for (int i = 0; i < n; i++)
		if (array[i] < min) {
			min = array[i];
			min_i = i;
		}

	for (int i = n+1; i >= min_i; i--) 
		array[i] = array[i - 1];
	array[min_i] = 0;

	for (int i = 0; i < n+1; i++)
		if (array[i] > max) {
			max = array[i];
			max_i = i;
		}

	for (int i = n + 2; i > max_i; i--)
		array[i] = array[i - 1];
	array[max_i + 1] = 0;

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i < (n+2); i++)
		cout << array[i] << " ";

	cout << endl;
	system("pause");
	return 0;

}
