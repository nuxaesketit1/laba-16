#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n < 0);

	int k = n;
	double* array = new double[n];
	double* array_1 = new double[n * 2];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++) {
		cin >> array[i];
	}

	for (int i = 0, j = 0; i < n; i++) {
		array_1[j] = array[i];
		if (array[i] < 0) {
			k++;
			array_1[j + 1] = 0;
			j += 2;
		} else {
			j++;
		}
	}

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i < k; i++)
		cout << array_1[i] << " ";

	cout << endl;
	system("pause");
	return 0;

}
